events = require('events')
fs = require('fs')

class File extends events.EventEmitter

  rootPath: ''

  constructor: (@path, @file_type) ->
    @content = ''

  projectPath: ->
    @path.substr(File.rootPath.length)

  readContentsFromDisk: ->
    fs.readFile(@path, 'utf8', (err, data) => 
      throw err if err
      @content = data
      @emit('reloaded')
    )

module.exports.File = File