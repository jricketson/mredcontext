Haml = require('haml')
mixin = require('mixin')
movable = require('views/mixins/movable')

class UnsavedFileListView extends Backbone.View

  id: 'unsavedFileList'
  template: Haml """
    .titleBar
      unsaved files
    .results
  """
  fileTemplate: Haml """
    .name= file.projectPath()
  """

  initialize: ->
    #TODO: this might be a performance problem later, but probably not. Should only render once.
    @model.on('add', => @render())
    @model.on('remove', => @render())

  render: ->
    @$el.html(@template())
    for m in @model.models
      @_appendFile(m)
    @

  _appendFile: (file) ->
    @$el.append(@fileTemplate(file:file))

mixin.include(UnsavedFileListView, movable)
exports.UnsavedFileListView = UnsavedFileListView